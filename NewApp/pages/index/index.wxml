  </swiper-item>
  <swiper-item>
    <scroll-view class="inner-content" scroll-y="true">
      <picker mode="selector" range="{{regions}}" value="{{r_index}}" bindchange="RegionChange">
          <view class="currProvince"><scroll-view scroll-x="true" scroll-left="{{scroll_left}}"><text>{{r_selected}}</text></scroll-view><image src="../../images/chevron_gray.svg" /></view>
      </picker>
      <view class="r_selector">
          <view class="reGPS"><image src="../../images/GPS.svg" /><view>重新定位</view></view>
      </view>
      <view class="passages-province">
        <view class="partName">省内新闻</view>
      </view>
    </scroll-view>
  </swiper-item>
  <swiper-item>
    <scroll-view class="inner-content" scroll-y="true" style="background-color: #eee;">
      <view style="background-color: #eee; padding-top: 20rpx"></view>
      <view class="user-PN">
        <view class="PN-left">
          <view class="user-P"><image src="{{_Profile}}" alt="用户头像"  wx:if="{{!theEmerBoolean}}"/><open-data type="userAvatarUrl" lang="en" wx:if="{{theEmerBoolean}}"/></view>
          <view class="user-N"><view class="user-name"><text  wx:if="{{!theEmerBoolean}}">{{_NickName}}</text><open-data type="userNickName" wx:if="{{theEmerBoolean}}"/></view><view class="foot-print">阅读计次：{{print_time}}</view></view>
        </view>
        <view class="PN-right" catchtap="TurnToHistory"><image src="../../images/history.svg" /></view>
      </view>
      <view style="background-color: #eee; padding-top: 20rpx"></view>
      <view class="user-SET">
        <view class="SET-item {{bling}}" bindtap="enterWeekly">
          <view class="item-body">
            <view class="body-left">
              <view class="item-title">周报入口</view>
              <view class="item-desc">根据用户偏好推送周报</view>
            </view>
            <view class="body-right"><image src="../../images/chevron_gray.svg" /></view>
          </view>
        </view>
        <view class="SET-item" bindtap="enterPreference">
          <view class="item-body">
            <view class="body-left">
              <view class="item-title">偏好设置</view>
              <view class="item-desc">设置你的关注内容</view>
            </view>
            <view class="body-right"><image src="../../images/chevron_gray.svg" /></view>
          </view>
        </view>
        <view class="SET-item" bindtap="enterFontSet">
          <view class="item-body">
            <view class="body-left">
              <view class="item-title">字体大小</view>
              <view class="item-desc">设置阅读字体大小</view>
            </view>
            <view class="body-right"><image src="../../images/chevron_gray.svg" /></view>
          </view>
        </view>
        <view class="SET-item" bindtap="clearHistory">
          <view class="item-body">
            <view class="body-left">
              <view class="item-title">清空阅读记录</view>
              <view class="item-desc">清空用户本地浏览历史记录</view>
            </view>
          </view>
        </view>
      </view>
