        <view class="partName">国务要闻</view>
        <block wx:for="{{partArr}}" wx:key="partKey" wx:for-item="part" wx:for-index="partIdx">
        <view class="partPorts" data-port="{{part.port}}" bindtap="LoadPassage">
          <view class="out-part">
            <view class="part-header">
              <block wx:if="{{part.image}}">
                <view class="part-left">
                  <view class="part-title" style="font: {{PARTTITLEFONT}} 'Roboto'"><text>{{part.title}}</text></view>
                  <view class="part-content">{{part.shortContent}}</view>
                </view>
                <view class="part-right"><view class="picFrame"><image mode="widthFix" src="{{part.image}}" style="background-color: transparent"/></view></view>
              </block>
              <block wx:if="{{!part.image}}">
                <view class="part-left" style="width: 700rpx">
                  <view class="part-title" style="font: {{PARTTITLEFONT}} 'Roboto'">{{part.title}}</view>
                  <view class="part-content">{{part.shortContent}}</view>
                </view>
              </block>
            </view>
            <view class="part-footer"><text class="time-stamp">{{part.timestamp}}</text><text class="origin-site">{{part.site}}</text><view class="mark-stamp"><image src="../../images/site_origin.svg" /></view></view>
