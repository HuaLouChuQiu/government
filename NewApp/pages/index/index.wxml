<view class="wxNavigationBar"><text class="AppName" catchtap="loadmore">NewApp</text></view>
<view class="_cover {{_show}}" catchtap="{{OPTIONNAME.function._CANCEL}}" bindtap="_closeWindow"></view>
<view class="_alertWindow {{_show}}">
  <view class="_header">{{OPTIONNAME.surface._header}}</view>
  <view class="_body">{{OPTIONNAME.surface._body}}</view>
  <view class="_footer">
    <button wx:if="{{OPTIONNAME.surface.GETUSERINFO}}" class="_okBtn" catchtap="{{OPTIONNAME.function._OK}}" hidden="{{!OPTIONNAME.surface._okBtn}}" open-type="getUserInfo" bindgetuserinfo="userInfohandler">{{OPTIONNAME.surface._okBtn}}</button>
    <button wx:if="{{!OPTIONNAME.surface.GETUSERINFO}}" class="_okBtn" catchtap="{{OPTIONNAME.function._OK}}" hidden="{{!OPTIONNAME.surface._okBtn}}">{{OPTIONNAME.surface._okBtn}}</button>
    <button class="_noBtn" catchtap="{{OPTIONNAME.function._CANCEL}}" hidden="{{!OPTIONNAME.surface._noBtn}}">{{OPTIONNAME.surface._noBtn}}</button>
  </view>
</view>
<scroll-view scroll-x="true" class="sort-tab" style="padding-bottom: 19rpx">
  <view class="tab-outer">
    <view class="tab-items">
      <text style="color: {{indicatorColor[0]}}" catchtap="Tab" data-idx="0">首页</text>
      <text style="color: {{indicatorColor[1]}}" catchtap="Tab" data-idx="1">关注</text>
      <text style="color: {{indicatorColor[2]}}" catchtap="Tab" data-idx="2">我的</text>
    </view>
    <view class="indicator-box" style="margin-left: {{IndicatorLeft}}rpx">
      <text class="indicator" style="opacity: {{indicatorShow[0]}}"></text>
      <text class="indicator" style="opacity: {{indicatorShow[1]}}"></text>
      <text class="indicator" style="opacity: {{indicatorShow[2]}}"></text>
    </view>
  </view>
</scroll-view>
<view class="slider {{refresh}}" style="transform: rotate({{refreshRotate}}deg)"><image src="../../images/refresh.svg" /></view>
<view class="shiftTop {{scrollUp}}" bindtap="{{scrollToTop}}"><image src="../../images/upward.svg" /></view>
<view class="shiftTop {{loadUp}}" style="z-index: 2"><image src="../../images/refresh.svg" /></view>
<view class="reachBottomest {{reached}}">-已到达最底部-</view>
<view class="_Preference {{_P_close}} {{extend}}">
  <view class="_P_title"><view class="title-body" style="width: 440rpx"><view class="badge"><image src="../../images/indexStar.svg" /></view><view class="title-center">选择你<text>感兴趣</text>的内容</view><view class="badge"><image src="../../images/indexStar.svg" /></view></view></view>
  <view class="_P_body">
    <swiper class="body-content" duration="200" bindchange="_P_swiped" current="{{_P_current}}" indicator-dots="true" indicator-active-color="#4082fc">
      <swiper-item class="first-swipe">
        <view class="first-item">轻触下一步，以选择您的兴趣偏好，您也可以现在关闭窗口，之后在「我的」界面进行修改。</view>
      </swiper-item>
      <swiper-item style="" >
        <view class="second-item">
          <view style="display: flex; width: 70%; margin: 0 auto; justify-content: center; flex-wrap: wrap"><block wx:for="{{_P_words}}" wx:for-index="_P_words_Idx" wx:for-item="_P_words_Item" wx:key="{{_P_words_key}}"><view class="_P_word" catchtap="_P_word_select" style="border-color: {{_P_words_Item.BorderColor}}; color: {{_P_words_Item.color}}; background: {{_P_words_Item.fill}}" data-Idx="{{_P_words_Idx}}" data-select="{{_P_words_Item}}">{{_P_words_Item.word}}</view></block></view>
        </view>
      </swiper-item>
      <swiper-item>
        <view class="third-item">
          <view class="third-item-header">已选择<text style="color: #4082fc; padding: 0 5rpx; font-weight: 700">{{wordsNum}}</text>个感兴趣的内容</view>
          <view class="third-item-body"><block wx:for="{{selected_P_words}}" wx:for-index="selected_P_words_Idx" wx:for-item="selected_P_words_Item" wx:key="{{selected_P_words_key}}"><view class="_P_word" catchtap="_P_word_select" style="border-color: {{selected_P_words_Item.BorderColor}}; color: #fff; background: {{selected_P_words_Item.BorderColor}}">{{selected_P_words_Item.word}}</view></block></view>
          <view class="third-item-footer">轻触完成，之后我们仅会推送您关注的内容。</view>
        </view>
      </swiper-item>
    </swiper>
  </view>
  <view class="_P_end"><view class="end-body"><view class="_contain" style="display: inline-block;"><view class="end-prev" catchtap="{{prev_Step}}">上一步</view><view class="end-cancel" catchtap="close_Window">以后再说</view><view class="end-next" catchtap="{{next_Step}}">{{next_complete}}</view></view></view></view>
</view>
