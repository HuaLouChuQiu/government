<view class="wxNavgationBar"><text class="AppName">NewApp</text></view>
<scroll-view scroll-x="true" class="sort-tab" style="padding-bottom: 19rpx">
  <view class="tab-outer">
    <view class="tab-items">
      <text style="color: {{indicatorColor[0]}}" catchtap="Tab" data-idx="0">首页</text>
      <text style="color: {{indicatorColor[1]}}" catchtap="Tab" data-idx="1">关注</text>
      <text style="color: {{indicatorColor[2]}}" catchtap="Tab" data-idx="2">我的</text>
    </view>
    <view class="indicator-box" style="margin-left: {{IndicatorLeft}}rpx">
      <text class="indicator" style="opacity: {{indicatorShow[0]}}"></text>
      <text class="indicator" style="opacity: {{indicatorShow[1]}}"></text>
      <text class="indicator" style="opacity: {{indicatorShow[2]}}"></text>
    </view>
  </view>
</scroll-view>
<swiper class="content" current="{{currentNum}}" duration="300" bindchange="swiped">
  <swiper-item style="background: red; ">
    <scroll-view class="inner-content" scroll-y="true">
      <view class="ranking">
        <view class="ranking-title">
          <view class="title1"><text>更新日期：{{updateTime}}</text></view>
          <view class="title2" style="border-bottom-right-radius: 5px"><text style="border-bottom-right-radius: 5px">全国各大高校人气排行</text></view>
          <view class="title3" style="border-top-right-radius: 5px"><text style="border-top-right-radius: 5px">TOP 20</text></view>
        </view>
        <view class="ranking-content">
          <view class="ranking-top-items" style="border-top-left-radius: 5px; border-top-right-radius: 5px">
            <view class="tops" style="border-top-left-radius: 5px; border-top-right-radius: 5px">
              <view class="goal-icon"><view class="order-rank">1</view><image src="../../images/medal_golden.svg" /></view>
              <view class="goal-name"><text class="goaler">湖南农业大学</text></view>
              <view class="goal-more"><text class="view_more">查看</text></view>
            </view>
            <view class="tops">
              <view class="goal-icon"><view class="order-rank">2</view><image src="../../images/medal_silver.svg" /></view>
              <view class="goal-name"><text class="goaler">某一一流大学。。。某一一流大学。。。。</text></view>
              <view class="goal-more"><text class="view_more">查看</text></view>
            </view>
            <view class="tops">
              <view class="goal-icon"><view class="order-rank">3</view><image src="../../images/medal_bronze.svg" /></view>
              <view class="goal-name"><text class="goaler">某一一流大学。。。某一一流大学。。。。</text></view>
              <view class="goal-more"><text class="view_more">查看</text></view>
            </view>
          </view>
          <view class="ranking-next-items" style="background-color: white">
            <view class="rank-order"><text>4</text></view>
            <view class="rank-name">某大学。。。</view>
          </view>
        </view>
        <view class="ranking-next-items" id="redirection" >
            <view class="view_all">查看全部</view>
        </view>
      </view>
      <view class="passages-country">
        <view class="partName">国务要闻</view>
        <view ></view>
      </view>
    </scroll-view>
  </swiper-item>
  <swiper-item style="background: purple">
    <scroll-view class="inner-content" scroll-y="true">
      <view class="test"></view>
      <view class="text"></view>
      <view class="test"></view>
      <view class="text"></view>
      <view class="test"></view>
      <view class="text"></view>
      <view class="test"></view>
    </scroll-view>
  </swiper-item>
  <swiper-item style="background: black">
    <scroll-view class="inner-content" scroll-y="true">
      <view class="test"></view>
      <view class="text"></view>
      <view class="test"></view>
      <view class="text"></view>
      <view class="test"></view>
      <view class="text"></view>
      <view class="test"></view>
    </scroll-view>
  </swiper-item>
</swiper>