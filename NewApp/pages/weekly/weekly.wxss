.weekly{width: 100vw; height: calc(100vh - 40rpx); background: none;}
.weekly .weekly-item.Inview{height: 100%; background: transparent}
.weekly .weekly-item.Inview .weekly-header .line{-webkit-animation: 700ms extend forwards; animation: 700ms extend forwards}
.bg{width: 100vw; height: inherit; position: absolute; background: rgba(255, 255, 255, 0); z-index: -1; opacity: 1; } 
.weekly .weekly-header{width: calc(100vw - 30rpx); height: calc(100rpx - 1px); border-top: 1px solid rgba(0, 0, 0, .05); background: transparent; padding: 0 15rpx; display: flex; align-items: center; flex-wrap: wrap;}
.weekly .weekly-header .header-date{height: 45rpx; font: 800 28rpx/60rpx "Roboto"; width: calc(100vw - 30rpx); margin-top: 25rpx}
.weekly .weekly-header .line{height: 4rpx; width: 18rpx; background: #d13239; clear: both; margin-bottom: 12rpx; opacity: .2;}
.weekly .weekly-header .header-date view{float: left; min-width: 40rpx; height: 40rpx; display: flex; justify-content: center; align-items: center}
.weekly .weekly-header .header-date view image{width: 30rpx; height: 30rpx; display: block}
.weekly .weekly-body{width: calc(100vw - 44rpx); height: calc(100% - 130rpx); background: none; padding: 15rpx 22rpx; display: flex; flex-direction: column-reverse; justify-content: stretch;}
.weekly .weekly-item.Inview .weekly-body{box-shadow: 0 0 1em rgba(0, 0, 0, .12); -webkit-transition: all 1000ms; transition: all 1000ms; background-color: white}
.weekly-body .body-top{width: calc(100% - 4px); background-color: none; flex-grow: 1; display: flex; justify-content: flex-end; border: 2px solid black; border-bottom: 0}
.weekly-body .body-top .vertical-origin{width: 40rpx; writing-mode: vertical-rl; font: 400 24rpx/40rpx "Roboto"; letter-spacing: 10rpx;}
.mark-stamp{width: 40rpx; height: 40rpx; background: none; float: left; display: flex; align-items: center; justify-content: center}
.mark-stamp::after{content: ""; display: block; width: 22rpx; height: 22rpx;border-radius: 50%; background-color: #d13239}
.author{width: 40rpx; min-height: 60rpx; padding-top: 20rpx; float: left; font-weight: 800}
.author::before{content: "æ–‡ / "; font-weight: 400; color: #888}
.weekly-body .body-top .vertical-title, .weekly-body .body-top .vertical-keywords{background: none; }
.weekly-body .body-top .title-content, .weekly-body .body-top .keyword-content{writing-mode: vertical-rl; max-height: 460rpx; min-height: 40rpx; font: 800 34rpx/50rpx "Roboto"; letter-spacing: 10rpx; padding-right: 10rpx; color: #222; padding-top: 40rpx}
.keyword-content{font-weight: 400;}
.keyword-content view{font-weight: 400; display: inline-block; padding: 20rpx 0; border: 1px dashed black; margin: 10rpx 10rpx; font: 500 26rpx/40rpx "Roboto"}
.IMG-desc{width: 48rpx; padding-right: 30rpx}
/* .title-content text{color: #d13239; font-weight: 400; padding: 10rpx 0} */
.weekly-body .body-bottom{width: calc(100% - 40rpx - 4px); padding: 10rpx 20rpx; height: 390rpx; background-color: none; flex-grow: 1; border: 2px solid black; border-top: 0}
.weekly-body .body-bottom .bottom-content{width: 100%; height: 100%; border-top: 1px solid rgba(0, 0, 0, .05)}
.bottom-content .b_content_header{font: 500 28rpx/30rpx "Roboto"; text-indent: .5em; border-left: 4px solid #d13239; height: 30rpx; margin: 24rpx 0}
.b_content_body{width: 100%; display: flex; justify-content: flex-start; padding-top: 12rpx}
.b_content_body .left-dot{width: 1em;}
.b_content_body .left-dot::after{width: .5em; height: .5em; content: ""; border-radius: 50%; margin: calc(20rpx - .25em) .25em; background: #d13239; display: block}
.b_content_body .right-body{width: calc(100% - 1em); font: 400 28rpx/46rpx "Roboto"; }
.b_content_body .right-body text{border-bottom: 1px dashed rgba(0, 0, 0, .05); padding-bottom: 2rpx}

.tipsTop, .tipsBottom{width: 100vw; height: 100rpx; background: transparent; position: absolute; z-index: -1; top: calc(140rpx + 1px); display: flex; align-items: center; justify-content: center}
.tipsTop image, .tipsBottom image{width: 170rpx; height: 48rpx;}
.tipsBottom{top: calc(100vh - 100rpx); background: transparent}

@-webkit-keyframes extend{
    100%{width: 50rpx; opacity: 1}
}
@keyframes extend{
    100%{width: 50rpx; opacity: 1;}
}
@-webkit-keyframes fadeIn{
    100%{opacity: 1}
}
@keyframes fadeIn{
    100%{opacity: 1}
}