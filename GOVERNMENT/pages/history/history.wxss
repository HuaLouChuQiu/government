.history-view{width: 100vw; height: 100vh; background: #eee}
.history-container{width: 100%; height: calc(100vh - 200rpx); padding-top: 160rpx;}
.history-container.stretch::after{content: "到底啦~~~"; text-align: center; width: 100%; height: 60rpx; display: block; font: 400 22rpx/60rpx "Roboto"; color: #898989; text-indent: 1px; letter-spacing: 1px}
.history-item{width: 100%; height: 125rpx; background: white; opacity: 0; -webkit-animation: 100ms slideShow forwards; animation: 200ms slideShow forwards;}
.history-item:active{-webkit-transition: all 100ms; transition: all 100ms; background: #f5f5f5}
.history-item-body{width: 680rpx; height: clac(100% - 1px); background: none; margin: 0 auto; display: flex; flex-direction: column; border-bottom: 1px solid rgba(0, 0, 0, .05)}
.history-item:last-child .history-item-body{border: 0}
.history-item-body .item-part{width: 100%; background: none}
.history-item-body .item-part.title{height: 55rpx; font: 900 27rpx/65rpx "Roboto"}
.history-item-body .item-part.content{height: 35rpx; font: 400 20rpx/30rpx "Roboto"; color: #989898}
.history-item-body .item-part.site{height: 35rpx; font: 400 18rpx/30rpx "Roboto"; text-align: right}

@-webkit-keyframes slideShow{
    100%{opacity: 1;}
}
@keyframes slideShow{
    100%{opacity: 1;}
}